<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <!-- Themes Settings -->
    <com.viper.venom.support.preferences.CategoryVenomPreference
        android:key="theme_settings"
        android:fragment="com.viper.venom.fragments.ThemesSettings"
        android:icon="@drawable/ic_settings_color_manager"
        android:title="@string/themesettings_title"
        android:summary="@string/themesettings_summary" />

    <!-- Custom Font -->
    <com.viper.venom.fragments.FontDialogPreference
        android:key="custom_font"
        android:layout="@layout/fontpicker_venom_preference"
        android:persistent="false" />

    <!-- Button Settings -->
    <com.viper.venom.support.preferences.CategoryVenomPreference
        android:key="button_settings"
        android:icon="@drawable/ic_settings_buttons"
        android:title="@string/button_settings_title"
        android:summary="@string/button_settings_title_summary"
        android:fragment="com.viper.venom.fragments.ButtonSettings" />

    <!-- Gesture Settings -->
    <com.viper.venom.support.preferences.CategoryVenomPreference
        android:key="gesture_settings"
        android:icon="@drawable/ic_oneplus_gestures"
        android:title="@string/gesture_settings_title"
        android:summary="@string/gesture_settings_title_summary"
        android:fragment="com.viper.venom.fragments.GestureSettings" />
 
     <!-- Battery light -->
     <com.viper.venom.support.preferences.CategoryVenomPreference
        android:key="battery_charging_light"
        android:icon="@drawable/ic_batterys_led_settings"
        android:title="@string/battery_light_settings"
        android:summary="@string/battery_light_settings_summary"
        android:fragment="com.viper.venom.fragments.LedSettings" />

    <!-- Notification light -->
    <com.viper.venom.support.preferences.CategoryVenomPreference
        android:key="notification_light"
        android:icon="@drawable/ic_settings_light_notifications"
        android:title="@string/notifications_title"
        android:summary="@string/notifications_title_summary"
        android:fragment="com.viper.venom.fragments.NotificationLightSettings" />

     <!-- Power Menu -->
    <com.viper.venom.support.preferences.CategoryVenomPreference
        android:key="powermenu_settings"
        android:icon="@drawable/ic_settings_powermenu"
        android:title="@string/powermenu_title"
        android:summary="@string/powermenu_title_summary"
        android:fragment="com.viper.venom.fragments.PowerMenuSettings" />

</PreferenceScreen>
