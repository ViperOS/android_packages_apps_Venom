<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/misc_category"
    android:layout="@layout/tab"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">
  
         <Preference
            android:key="notifications"
            android:fragment="com.viper.venom.fragments.NotificationsSettings"
            android:layout="@layout/preference_notifications_settings"
            android:title="@string/notifications_category" />

        <PreferenceScreen
            android:key="lockscreen"
            android:fragment="com.viper.venom.fragments.LockscreenSettings"
            android:layout="@layout/preference_lockscreen_settings"
            android:title="@string/lockscreen_ui_title" />

        <PreferenceScreen
            android:key="recents"
            android:fragment="com.viper.venom.fragments.RecentsSettings"
            android:layout="@layout/preference_recents"
            android:title="@string/recents_title" />

         <Preference
            android:key="misc"
            android:fragment="com.viper.venom.fragments.MiscSettings"
            android:layout="@layout/preference_misc_settings"
            android:title="@string/other_settings" />
			
</PreferenceScreen>